.form-user
  #newUser.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          / %button.close.btn-close-user{"aria-label" => "Close", "data-dismiss" => :modal, :type => "button"}
          /   %span{"aria-hidden" => "true"} Ã—
          .pull-right= link_to "x", users_path, :class => 'btn-close-user'
          %h4#myModalLabel.modal-title= title
        .modal-body
          = simple_form_for user, remote: true, :html => { :class => 'form-horizontal' } do |f|
            = f.input :first_name, label: false, placeholder: "First name"
            = f.input :last_name, label: false, placeholder: "Last name"
            .form-actions
              = f.submit nil, :class => 'btn btn-primary'
              = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-close-user'

